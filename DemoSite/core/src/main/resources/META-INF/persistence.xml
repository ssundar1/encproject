<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
    <persistence-unit name="blPU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/web</non-jta-data-source>
        <mapping-file>config/bc/jpa/domain/Measurement.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/OrderItem.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/Dispute.orm.xml</mapping-file>
       <class>com.enclothe.core.customer.domain.EncCustomerImpl</class>
        <class>com.enclothe.core.measurement.domain.MeasurementImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncOrderItemStatesImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncOrderItemImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncOrderItemStateDetailImpl</class>
        <class>com.enclothe.core.common.domain.UserCategoryImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncOrderItemStateTransitionImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncMaterialOrderItemImpl</class>
        <class>com.enclothe.core.dm.order.domain.EncOrderItemImpl</class>        
        <class>com.enclothe.core.product.domain.EncDesignImpl</class>        
        <class>com.enclothe.core.product.domain.EncMaterialImpl</class>  
        <class>com.enclothe.core.dispute.domain.DisputeImpl</class>
         <class>com.enclothe.core.dispute.domain.DisputeStateImpl</class>
         <class>com.enclothe.core.dispute.domain.DisputeChannelImpl</class>
         <class>com.enclothe.core.dispute.domain.DisputePriorityImpl</class>
         <class>com.enclothe.core.dispute.domain.DisputeCommentImpl</class>  
          <class>com.enclothe.core.serviceprovider.domain.ServiceProviderImpl</class>
         <class>com.enclothe.core.serviceprovider.domain.ServiceProviderAccountInfoImpl</class>
        <class>com.enclothe.core.serviceprovider.domain.ServiceProviderAttributeImpl</class>   
        <exclude-unlisted-classes/>
    </persistence-unit>
    
    <persistence-unit name="blSecurePU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/webSecure</non-jta-data-source>
        <exclude-unlisted-classes/>
    </persistence-unit>

    <persistence-unit name="blCMSStorage" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/cmsStorage</non-jta-data-source>
        <exclude-unlisted-classes/>
    </persistence-unit>
</persistence>